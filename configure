#!/bin/sh
#delete any old conf file
rm -f $(dirname $0)/config.mk

HOST=""

if [ -z "$PREFIX" ] ; then
	PREFIX="/usr/local"
fi

if [ -z "$CFLAGS" ] ; then
	CFLAGS="-Wall -Wextra"
fi

OPT=""
DEFAULT_OUTPUT_FORMAT="elf64"

for i in "$@"; do
	case $i in
		--with-sysroot=*|--sysroot=*)
			SYSROOT="${i#*=}"
			shift # past argument=value
			;;
		--cc=*)
			CC="${i#*=}"
			shift # past argument=value
			;;
		--ar=*)
			AR="${i#*=}"
			shift # past argument=value
			;;
		--cflags=*)
			CFLAGS="${i#*=}"
			shift
			;;
		--host=*)
			HOST="${i#*=}"
			shift # past argument=value
			;;
		--prefix=*)
			PREFIX="${i#*=}"
			shift # past argument=value
			;;
		--debug)
			OPT="-DDEBUG $OPT"
			shift
			;;
		--default-output-format=*)
			DEFAULT_OUTPUT_FORMAT="${i#*=}"
			shift # past argument=value
			;;

		-*|--*)
			echo "Unknown option $i"
			exit 1
			;;
		*)
			;;
	esac
done

#check tools
if [ "$HOST" != "" ] ; then
	PREV="${HOST}-"
fi
if [ "$CC" = "" ] ; then
	if ${PREV}gcc --version > /dev/null 2>/dev/null ; then
		CC="${PREV}gcc"
	elif ${PREV}clang --version > /dev/null 2>/dev/null ; then
		CC="${PREV}clang"
	else
		echo "error : no c compilator found"
		exit 1
	fi
fi
if [ "AR" = "" ] ; then
	if ${PREV}ar --version > /dev/null 2>/dev/null ; then
		CC="${PREV}ar"
	elif ${PREV}clang --version > /dev/null 2>/dev/null ; then
		CC="${PREV}sar"
	else
		echo "error : no archiver found"
		exit 1
	fi
fi

#if host is NULL get it from compiler
if [ "$HOST" = "" ] ; then
	HOST=$($CC -dumpmachine)
fi

#add config to cflags
CFLAGS="$CFLAGS -DDEFAULT_OUTPUT_FORMAT='\"$DEFAULT_OUTPUT_FORMAT\"'"

echo "#generated automatically by ./configure" > config.mk
echo "HOST=$HOST" >> config.mk
echo "PREFIX=$PREFIX" >> config.mk
echo "CC=$CC" >> config.mk
echo "AR=$AR" >> config.mk
echo "CFLAGS=$CFLAGS $OPT" >> config.mk
echo "SYSROOT=$SYSROOT"  >> config.mk

cp config.mk tld
cp config.mk sar
cp config.mk libttc
